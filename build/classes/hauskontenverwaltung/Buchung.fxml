<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import java.net.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>

<AnchorPane styleClass="startPane"
            prefHeight="640.0" 
            prefWidth="640.0"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="hauskontenverwaltung.BuchungController">
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    <children>
         <HBox layoutX="20" layoutY="25">
            <GridPane  styleClass="egrid" layoutX="40" layoutY="25">
                <Label text="Kontonummer: "
                       styleClass="lbl" 
                       GridPane.columnIndex="0" 
                       GridPane.rowIndex="0"/>
                <Label text="Datum: "
                       styleClass="lbl" 
                       GridPane.columnIndex="0" 
                       GridPane.rowIndex="1"/>
                <Label text="Beschreibung: "
                       styleClass="lbl" 
                       GridPane.columnIndex="0" 
                       GridPane.rowIndex="2"/>  
                <Label text="Betrag: "
                       styleClass="lbl" 
                       GridPane.columnIndex="0" 
                       GridPane.rowIndex="3"/>      
                        
                <ComboBox GridPane.columnIndex="1" 
                       GridPane.rowIndex="0">
                     <items>
                        <FXCollections fx:factory="observableArrayList">
                        
                        </FXCollections>
                    </items>                           
                </ComboBox>
                <DatePicker fx:id="dpDate"
                        styleClass="dp" 
                        GridPane.columnIndex="1" 
                        GridPane.rowIndex="1"/>     
                <TextField fx:id="tfBeschreibung"
                       text=""                       
                       styleClass="tf" 
                       GridPane.columnIndex="1" 
                       GridPane.rowIndex="2"/>
                <HBox GridPane.columnIndex="1" 
                       GridPane.rowIndex="3">
                    <children>
                        <TextField fx:id="tfBetrag"/>
                        <fx:define>
                        <ToggleGroup fx:id="myToggleGroup"/>
                        </fx:define>
                        <RadioButton text="Einzahlung" toggleGroup="$myToggleGroup"/>
                        <RadioButton text="Ausgabe" toggleGroup="$myToggleGroup"/>                             
                            
                    </children>                           
                </HBox>                          
                </GridPane>
            
                <Button fx:id="btnUebernehmen"
                       text="Ãœbernehmen"
                       styleClass="btn" />
                
                        
            
        </HBox>
            <HBox layoutX="20" layoutY="190">
                <Label fx:id="lblStatus" text="Das ist die Statuszeile!"/>
            </HBox>
            <!-- *** Tabellenbebereich (ScrollPane) *** -->
        <ScrollPane layoutX="20" layoutY="230" >
        <TableView fx:id="tblAnzeige" >
            <columns>
                <TableColumn fx:id="colDatum" text="Datum"
                             resizable="false" editable="false"/>
                <TableColumn fx:id="colBetrag" text="Betrag"
                             resizable="false" editable="false"/>
                <TableColumn fx:id="colBuchungsart" text="E/A"
                             resizable="false" editable="false"/>  
                <TableColumn fx:id="colBeschreibung" text="Beschreibung"
                             resizable="false" editable="false"/>   
                <TableColumn fx:id="colKontonummer" text="Kontonummer"
                             resizable="false" editable="false"/>             
            </columns>
        </TableView>
        </ScrollPane>
    </children>
</AnchorPane>