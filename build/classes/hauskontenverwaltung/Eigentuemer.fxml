<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import java.net.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane styleClass="startPane"
            prefHeight="640.0" 
            prefWidth="640.0"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="hauskontenverwaltung.EigentuemerController">
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    <children>
        <HBox layoutX="20" layoutY="25">
            <GridPane  styleClass="egrid" layoutX="40" layoutY="25">
                <Label text="Kontonummer: "
                       styleClass="lbl" 
                       GridPane.columnIndex="0" 
                       GridPane.rowIndex="0"/>
                <Label text="Nachname: "
                       styleClass="lbl" 
                       GridPane.columnIndex="0" 
                       GridPane.rowIndex="1"/>
                <Label text="Vorname: "
                       styleClass="lbl" 
                       GridPane.columnIndex="0" 
                       GridPane.rowIndex="2"/>
                <Label text="Wohnungsnummer: "
                       styleClass="lbl" 
                       GridPane.columnIndex="0" 
                       GridPane.rowIndex="3"/>
                
                <TextField fx:id="tfNummer"
                       text=""
                       editable ="false"
                       styleClass="tf" 
                       GridPane.columnIndex="1" 
                       GridPane.rowIndex="0"/>
                <TextField fx:id="tfNachname"
                       text=""
                       styleClass="tf" 
                       GridPane.columnIndex="1" 
                       GridPane.rowIndex="1"/>
                <TextField fx:id="tfVorname"
                       text=""
                       styleClass="tf" 
                       GridPane.columnIndex="1" 
                       GridPane.rowIndex="2"/> 
                <TextField fx:id="tfWhgnummer"
                       styleClass="tf" 
                       GridPane.columnIndex="1" 
                       GridPane.rowIndex="3"/>
                </GridPane>
            <VBox  layoutX="500" layoutY="25">
                <Button fx:id="btnNeu"
                       text="Neu"
                       styleClass="btn" />
                <Button fx:id="btnAendern"
                       text="Ändren"
                       styleClass="btn"/>
                <Button fx:id="btnLoeschen"
                       text="Löschen"
                       styleClass="btn">
                    <tooltip>
                        <Tooltip text="Stammdaten löschen" styleClass="tooltip"/>
                    </tooltip>
                </Button>
            </VBox>               
            
        </HBox>
            <HBox layoutX="20" layoutY="190">
                <Label fx:id="lblStatus" text="Das ist die Statuszeile!"/>
            </HBox>
            <!-- *** Tabellenbebereich (ScrollPane) *** -->
        <ScrollPane layoutX="20" layoutY="230" >
        <TableView fx:id="tblAnzeige" >
            <columns>
                <TableColumn fx:id="colNummer" text="Kontonummer"
                             resizable="false" editable="false"/>
                <TableColumn fx:id="colName" text="Eigentümername"
                             resizable="false" editable="false"/>
                <TableColumn fx:id="colWhgnummer" text="Wohnungsnummer"
                             resizable="false" editable="false"/>
                <TableColumn fx:id="colKontostand" text="Kontostand"
                             resizable="false" editable="false"/>
            </columns>
        </TableView>
    </ScrollPane>
        <HBox layoutX="20" layoutY="600">
            <Label fx:id="lblStand" text="Hier wird Gesamt Kontostand angezeigt"/>
        </HBox>       
       
    </children>
    
    
   
</AnchorPane>
    
    
    

